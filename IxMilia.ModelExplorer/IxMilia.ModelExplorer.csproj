  <ItemGroup>
    <ProjectReference Include="..\stl\src\IxMilia.Stl\IxMilia.Stl.csproj" />
    <ProjectReference Include="..\threemf\src\IxMilia.ThreeMf\IxMilia.ThreeMf.csproj" />
